//	데이터타입 - Integer, Character, Float, Double
public class Tutorial33 {

	public static void main(String[] args) {

		double a = 10.3;
		double b = 8.3;
		double c = 10.2;
				
		System.out.println((a + b + c) / 3);
//		double을 사용하여 평균값을 구함
		
		for(char i = 'a' ; i <= 'z'; i++)
//			char i = a부터 시작. z까지 i를 1씩 증가
			System.out.print(i + " ");
//		a부터 z까지 캐릭터 i를 이용하여 출력
//		print = 줄을 바꾸지 않음
//		println = 줄을 바꿈
			System.out.println();
			
		int d = 200;
		
		System.out.println("10진수 : " + d);
		System.out.format("8진수 : %o\n", d);
//		%o = 어떠한 10진수의 수를 8진수로 바꾸게 하는 명령값
		System.out.format("16진수 : %x", d);
//		%x = 어떠한 10진수의 수를 16진수로 바꾸게 하는 명령값
		

	}

}
